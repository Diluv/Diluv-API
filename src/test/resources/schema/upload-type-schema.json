{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "loaders": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "slug": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "releaseTypes": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ]
        },
        "classifiers": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ]
        },
        "gameVersions": {
            "$ref": "data/game_versions.json"
        },
        "filters": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "slug": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    },
    "required": [
        "loaders",
        "releaseTypes",
        "classifiers",
        "gameVersions",
        "filters"
    ],
    "additionalProperties": false
}