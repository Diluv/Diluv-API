{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "games": {
            "type": "array",
            "items": [
                {
                    "$ref": "data/games.json"
                }
            ]
        },
        "projects": {
            "type": "array",
            "items": [
                {
                    "$ref": "data/projects.json"
                }
            ]
        },
        "projectCount": {
            "type": "number"
        },
        "authorCount": {
            "type": "number"
        }
    },
    "required": [
        "games",
        "projects",
        "projectCount",
        "authorCount"
    ],
    "additionalProperties": false
}