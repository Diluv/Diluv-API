{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "userId": {
            "type": "number"
        },
        "username": {
            "type": "string"
        },
        "displayName": {
            "type": "string"
        },
        "avatarURL": {
            "$ref": "image.json"
        },
        "createdAt": {
            "type": "string"
        },
        "role": {
            "type": "string"
        },
        "permissions": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ]
        }
    },
    "required": [
        "userId",
        "username",
        "displayName",
        "avatarURL",
        "createdAt"
    ],
    "additionalProperties": false
}